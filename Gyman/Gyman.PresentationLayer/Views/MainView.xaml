<mah:MetroWindow x:Class="Gyman.PresentationLayer.Views.MainView"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:v="clr-namespace:Gyman.PresentationLayer.Views"
                 xmlns:vm="clr-namespace:Gyman.PresentationLayer.ViewModels"
                 xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                 mc:Ignorable="d"
                 Title="GYMAN"
                 WindowStartupLocation="CenterScreen"
                 MinHeight="384"
                 MinWidth="576"
                 SnapsToDevicePixels="True">
    <Grid Margin="2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Menu Grid.Column="0"
              Grid.ColumnSpan="3"
              Grid.Row="0"
              FontSize="16">
            <MenuItem Header="Add">
                <MenuItem Header="Member"
                          Command="{Binding CreateNewDetailViewCommand}"
                          CommandParameter="{x:Type vm:MemberDetailViewModel}"/>
                <MenuItem Header="Trainer"
                          Command="{Binding CreateNewDetailViewCommand}"
                          CommandParameter="{x:Type vm:TrainerDetailViewModel}"/>
            </MenuItem>
            <MenuItem Header="View">
                <MenuItem Header="All members"/>
                <MenuItem Header="All trainers"/>
                <MenuItem Header="Schedule"/>
            </MenuItem>
        </Menu>

        <v:NavigationView Grid.Column="0"
                          Grid.Row="1"
                          DataContext="{Binding NavigationViewModel}"/>

        <TabControl Grid.Column="1"
                    Grid.Row="1"
                    ItemsSource="{Binding DetailViewModels}"
                    SelectedItem="{Binding SelectedDetailViewModel, Mode=TwoWay}"
                    ItemTemplate="{StaticResource DetailViewItemTemplate}"
                    ItemContainerStyle="{StaticResource DetailViewItemContainerStyle}"/>
    </Grid>
</mah:MetroWindow>
